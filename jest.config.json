{
  "roots": [
    "<rootDir>/test"
  ],
  "setupFilesAfterEnv": ["<rootDir>/test/setupTests.ts"],
  "testMatch": [
    "**/__tests__/**/*.+(ts|js)",
    "**/?(*.)+(spec|test).+(ts|js)"
  ],
  "transform": {
    "^.+\\.(ts)?$": "ts-jest"
  },
  "coveragePathIgnorePatterns": [
    "test/fixtures",
    "test/builders"
  ],
  "moduleNameMapper": {
    "@gitReport/(.*)": "<rootDir>/src/gitReport/$1",
    "@core/(.*)": "<rootDir>/src/core/$1",
    "@test/(.*)": "<rootDir>/test/$1"
  }
}
