{
  "roots": [
    "<rootDir>/test"
  ],
  "setupFilesAfterEnv": ["<rootDir>/test/setup-tests.ts"],
  "testMatch": [
    "**/__tests__/**/*.+(ts|js)",
    "**/?(*.)+(spec|test).+(ts|js)"
  ],
  "transform": {
    "^.+\\.(ts)?$": "ts-jest"
  },
  "coveragePathIgnorePatterns": [
    "test/fixtures",
    "test/builders"
  ]
}
