{
  "name": "git-reporter",
  "version": "1.1.2",
  "description": "A command line tool for contribution reporting on git projects.",
  "bin": {
    "git-reporter": "bin/gitReport.js"
  },
  "files": [
    "build",
    "!build/**/*.test.*",
    "!build/setupTests.*",
    "!build/**/*.js.map"
  ],
  "scripts": {
    "prepare": "npm run build",
    "prestart": "npm run build",
    "start": "node build/index.js",
    "dev": "npm run build -- --watch & nodemon build/index.js",
    "build": "npm run lint && npm test && tsc",
    "docs:update": "auto-changelog -p && git add CHANGELOG.md && git commit -m \"📝 update changelog\"",
    "prepublishOnly": "npm run tag",
    "tag": "TAG=v$(node -pe \"require('./package.json').version\"); git commit -am \"🔖 $TAG\" && git tag $TAG && npm run docs:update && git push && git push --tags",
    "lint": "eslint . --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest --verbose",
    "test:watch": "npm t -- --watchAll",
    "test:coverage": "npm t -- --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ulisesantana/git-reporter.git"
  },
  "keywords": [
    "git", "git log", "git report", "project report", "team report", "analytics"
  ],
  "author": "Ulises Santana <ulisesantana@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ulisesantana/git-reporter/issues"
  },
  "homepage": "https://github.com/ulisesantana/git-reporter#readme",
  "devDependencies": {
    "@types/faker": "5.5.3",
    "@types/jest": "26.0.5",
    "@types/node": "14.14.10",
    "@typescript-eslint/eslint-plugin": "4.16.1",
    "@typescript-eslint/parser": "4.16.1",
    "auto-changelog": "^2.2.1",
    "eslint": "7.21.0",
    "eslint-config-standard": "16.0.2",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.3.1",
    "husky": "4.2.5",
    "jest": "26.1.0",
    "lint-staged": "10.2.11",
    "nodemon": "1.19.4",
    "ts-jest": "26.1.3",
    "ts-node": "9.1.1",
    "typescript": "3.9.7"
  },
  "dependencies": {
    "faker": "5.5.3",
    "reflect-metadata": "0.1.13",
    "stdio": "2.1.1",
    "tsyringe": "4.5.0",
    "undici": "3.3.5"
  }
}
