{
  "name": "git-reporter",
  "version": "3.0.1",
  "description": "A command line tool for contribution reporting on git projects.",
  "bin": {
    "git-reporter": "./bin/run"
  },
  "main": "lib/index.js",
  "files": [
    "lib",
    "bin"
  ],
  "scripts": {
    "build": "rm -rf lib && npm run build:only",
    "build:only": "tsc -p tsconfig.build.json",
    "docs:update": "auto-changelog -p && git add CHANGELOG.md && git commit -m \"ðŸ“ update changelog\"",
    "lint": "eslint . --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "npm run build",
    "prepack": "npm run build && oclif-dev readme",
    "prepublishOnly": "npm run tag",
    "tag": "npm run update-version && TAG=v$(node -pe \"require('./package.json').version\"); git commit -am \"ðŸ”– $TAG\" && git tag $TAG && npm run docs:update && git push && git push --tags",
    "update-version": "echo \"export default '$(node -pe \"require('./package.json').version\")'\" > ./src/version.ts",
    "test": "jest --verbose --coverage",
    "version": "oclif-dev readme && git add README.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ulisesantana/git-reporter.git"
  },
  "keywords": [
    "git",
    "git log",
    "git report",
    "project report",
    "team report",
    "analytics"
  ],
  "author": "Ulises Santana <ulisesantana@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ulisesantana/git-reporter/issues"
  },
  "homepage": "https://github.com/ulisesantana/git-reporter#readme",
  "devDependencies": {
    "@oclif/dev-cli": "1.26.0",
    "@types/faker": "5.5.3",
    "@types/jest": "27.0.1",
    "@types/node": "14.14.10",
    "@typescript-eslint/eslint-plugin": "4.16.1",
    "@typescript-eslint/parser": "4.16.1",
    "auto-changelog": "^2.2.1",
    "eslint": "7.21.0",
    "eslint-config-oclif": "3.1.0",
    "eslint-config-oclif-typescript": "0.1.0",
    "eslint-config-standard": "16.0.2",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.3.1",
    "husky": "4.2.5",
    "jest": "27.1.1",
    "lint-staged": "10.2.11",
    "nodemon": "1.19.4",
    "ts-jest": "27.0.5",
    "ts-node": "9.1.1",
    "typescript": "4.2.4"
  },
  "dependencies": {
    "@oclif/command": "1.8.0",
    "@oclif/config": "1.17.0",
    "@oclif/plugin-help": "3.2.3",
    "cli-ux": "^5.6.3",
    "colorette": "^2.0.13",
    "faker": "5.5.3",
    "reflect-metadata": "0.1.13",
    "tslib": "1.14.1",
    "tsyringe": "4.5.0",
    "undici": "3.3.5"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "auto-changelog": {
    "commitLimit": false,
    "unreleased": true,
    "sortCommits": "date-desc"
  }
}
